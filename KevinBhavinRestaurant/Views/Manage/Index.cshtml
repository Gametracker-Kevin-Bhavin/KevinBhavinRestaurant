@model KevinBhavinRestaurant.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2 id="accheaders">@ViewBag.Title.</h2>

<p class="text-success" id="accheaders">@ViewBag.StatusMessage</p>
<div id="accdivs">
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>
    </dl>
</div>
